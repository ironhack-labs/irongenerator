extends layout

block content
  form(action="/authentication/sign-up" method="POST")
    label(for="input-name") Name
    input#input-name(type="text" name="name" placeholder="Your Name")
    label(for="input-email") Email
    input#input-email(type="email" name="email" placeholder="Your Email")
    label(for="input-password") Password
    input#input-password(type="password" name="password" placeholder="A Strong Password")
    button Sign Up
  if authentication.strategies && authentication.strategies.includes("github")
    a(href="/authentication/github" class="btn") Sign Up with GitHub